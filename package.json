{
  "name": "lesson6-homework",
  "version": "1.0.0",
  "description": "Lesson 6",
  "main": "src/index.js",
  "repository": "https://github.com/Valera-Palianov/lesson6-homework",
  "author": "Valera Palianov <valera.palianov@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "better-npm-run start-dev",
    "prod": "better-npm-run build-prod",
    "build": "better-npm-run build-dev"
  },
  "betterScripts": {
    "build-prod": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production",
        "NODE_RESULT": "build"
      }
    },
    "build-dev": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development",
        "NODE_RESULT": "build"
      }
    },
    "start-dev": {
      "command": "webpack-dev-server --open",
      "env": {
        "NODE_ENV": "development",
        "NODE_RESULT": "server",
        "PORT": 3000
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "babel-loader": "^8.1.0",
    "better-npm-run": "^0.1.1",
    "css-loader": "^3.5.3",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
